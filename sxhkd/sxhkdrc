#
# bspwm hotkeys
#
super + alt + Escape
    bspc quit

super + w
    bspc window -c

super + t
    terminator

super + q
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last


super + alt + w
    bspc window -k  


super + i
    terminator -e "tm irssi" -T irssi

super + shift + m 
    terminator -e "source ~/.zshrc; zsh -c ncmpcpp" -T ncmpcpp

super + m
    terminator -e "zsh -c 'source ~/.zshrc; ssh -Y -A -t anaproy.nl /home/proycon/bin/tm_alot'" -T mail

super + v
    terminator -e "tm vim" -T vim

super + {p,n}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + b
    bspc window -s biggest

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0,minus,equal}
    bspc {desktop -f,window -d} ^{1-9,10,11,12}

super + {Left,Right}
    bspc desktop -f {prev,next}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

alt + @F2
    lala

alt + @F3
    setinput.sh

alt + @F5
    mountssh
    
alt + @F9
    setxkbmap proylatin

alt + @F10
    setxkbmap proyeo

alt + @F11
    setxkbmap proyru

alt + @F12
    setxkbmap proyar
#
# wm independent hotkeys
#
super + Return
    terminator

super + space
    dmenu_run

# make sxhkd reload its configuration files:
super + ctrl + Escape
    pkill -USR1 -x sxhkd

super + Escape
    xflock4

super + shift + Escape
    /home/proycon/bin/suspend.sh
